{% extends "base.jinja2" %}
{% block content %}
    <div class="container">
        <div class="page-header">
            <h1>Create Store</h1>
            <hr>
        </div>
    </div>
    <div class="form-size">
        <form action="{{ url_for('stores.create_store') }}" method="post">
            <div class="form-group ">
                <label for="name">Store Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="My Store">
            </div>
            <div class="form-group ">
                <label for="prefix">Store URL prefix</label>
                <input type="text" class="form-control" id="prefix" name="prefix" placeholder="http://www.mystore.com">
            </div>
            <div class="form-group ">
                <label for="tag_name">Tag</label>
                <input type="text" class="form-control" id="tag_name" name="tag_name" value="span" placeholder="span"
                       aria-describedby="storeTagNameHelp">
                <span id="storeTagNameHelp" class="help-block">What is the HTML tag of the item that contains the item price?(Usually <code>span</code>)</span>
            </div>
            <div class="form-group">
                <label for="query">Query</label>
                <input type="text" class="form-control" id="query" name="query" value='{"id":"price-now"}' placeholder='{"id":"price-now"}'
                       aria-describedby="queryHelpBlock">
                <span id="queryHelpBlock" class="help-block">Json query to find specific tag with price.<br>Remember to use double quotation marks!)</span>
            </div>
            <button class="btn btn-primary" type="submit">
                Create
            </button>
        </form>
    </div>
{% endblock %}