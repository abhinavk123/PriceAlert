{% extends "base.jinja2" %}
{% block content %}
    <div class="container">
        <div class="page-header">
            <h1>Edit Store</h1>
            <hr>
        </div>
    </div>
    <div class="form-size">
        <form action="{{ url_for('stores.edit_store',store_id=store._id) }}" method="post">
            <div class="form-group ">
                <label for="name">Store Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="{{ store.name }}" value="{{ store.name }}">
            </div>
            <div class="form-group ">
                <label for="prefix">Store URL prefix</label>
                <input type="text" class="form-control" id="prefix" name="prefix" placeholder="{{ store.prefix }}" value="{{ store.prefix }}">
            </div>
            <div class="form-group ">
                <label for="tag_name">Tag</label>
                <input type="text" class="form-control" id="tag_name" name="tag_name" value="{{ store.tag_name }}" placeholder="{{ store.tag_name }}"
                       aria-describedby="storeTagNameHelp">
                <span id="storeTagNameHelp" class="help-block">What is the HTML tag of the item that contains the item price?(Usually <code>span</code>)</span>
            </div>
            <div class="form-group">
                <label for="query">Query</label>
                <input type="text" class="form-control" id="query" name="query" value='{{ store.query | tojson }}' placeholder='{{ store.query | tojson }}'
                       aria-describedby="queryHelpBlock">
                <span id="queryHelpBlock" class="help-block">Json query to find specific tag with price.<br>Remember to use double quotation marks!)</span>
            </div>
            <button class="btn btn-primary" type="submit">
                Update
            </button>
        </form>
    </div>
{% endblock %}