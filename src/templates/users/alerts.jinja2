{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header ">
        <h1>Alerts<small> showing already existed alerts</small></h1>
    </div>
    <hr>
    <div class="list-group">
    {% for alert in alerts %}
        <a href="{{ url_for('alerts.get_alert_page',alert_id = alert._id) }}" class="list-group-item {{ "list-group-item-warning" if not alert.active else '' }}">
            <h4 class="list-group-item-heading " style="color: #1c25ba ">
                <span class="{{ 'far fa-lightbulb' if not alert.active else 'fas fa-lightbulb'   }}"></span>Alert for {{ alert.item.name }}</h4>
            <p class="list-group-item-text">Last Price found <strong>{{ alert.item.price }}</strong><br>
            Last Checked on <strong>{{ alert.last_checked.strftime("%d-%m-%y at %H:%M") }}</strong>
            </p>
        </a>
    {% endfor %}


    </div>
    <a class="btn btn-success"  href="{{ url_for('alerts.create_alert') }}"><span class="fa fa-plus"></span> Create Alert</a>

{% endblock %}