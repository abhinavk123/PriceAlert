{% extends "base.jinja2" %}
{% block content %}
    <div class="container">
        <div class="page-header">
            <h1>Edit Alert</h1>
            <hr>
        </div>
    </div>
    <div class="form-size">
        <form action="{{ url_for('alerts.edit_alert',alert_id=alert._id) }}" method="post">
            <div class="form-group ">
                <label for="name">Alert/Item Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="{{ alert.item.name }}" disabled>
            </div>
            <div class="form-group ">
                <label for="prefix">URL</label>
                <input type="text" class="form-control" id="url" name="url" placeholder="{{ alert.item.url }}" disabled>
            </div>
            <div class="form-group ">
                <label for="prefix">Price Limit</label>
                <input type="text" class="form-control" id="price-limit" name="price-limit" placeholder="{{ alert.price_limit }}">
            </div>
            <button class="btn btn-primary" type="submit">
                Update
            </button>
        </form>
    </div>
{% endblock %}