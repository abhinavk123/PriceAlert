{% extends "base.jinja2" %}
{% block content %}

    <div class="page-header">
        <h1>Alert
            <small>for <i>{{ alert.item.name }}</i></small>
        </h1>
    </div>
    <p>Last Price <strong>{{ alert.item.price }}</strong></p>
    <p>Last Checked <strong>{{ alert.last_checked.strftime("%d-%m-%y at %H:%M") }}</strong></p>
    <div class="card ">
        <div class="card-body">
            <a class="btn btn-success" role="button" href="{{ alert.item.url }}" target="_blank">Visit Site</a>
            <a class="btn btn-warning" role="button" href="{{ url_for('alerts.edit_alert',alert_id=alert._id) }}">Edit
            </a>
            {% if alert.active %}
                <a class="btn btn-danger" role="button"
                   href="{{ url_for('alerts.deactivate_alert',alert_id=alert._id) }}">Deactivate</a>
            {% else %}
                <a class="btn btn-success" role="button"
                   href="{{ url_for('alerts.activate_alert',alert_id=alert._id) }}">Activate</a>
                <a class="btn btn-danger" role="button"
                   href="{{ url_for('alerts.delete_alert',alert_id=alert._id) }}">Permanent Delete Alert</a>
            {% endif %}
            <a class="btn btn-warning" role="button" href="{{ url_for('alerts.check_price',alert_id=alert._id) }}">Check
                Price</a>
        </div>
    </div>

{% endblock %}